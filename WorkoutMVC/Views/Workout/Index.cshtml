@{
    ViewBag.Title = "Workout";
}





<style>
 
    h1{
        margin: 50px 50px 30px 390px;
    }

    .jumbotron {
        padding-top: 4px;
        padding-right: 0px;
    }

    #userName {
        margin-left: -40px;
    }

    #weekNumber {
        float: left;
        margin-left: 250px;
    }

    #dayNumber {
        float: left;
        margin-left: 150px;
    }

    #workoutNumber{
        margin-bottom: 170px;
    }

    .workoutBox {
        float: none;
        height: 200px;
        width: 800px;
        margin: 30px 50px 50px 110px;
        border: solid;
    }

    .workoutName{
        margin: 40px 50px 30px 310px;
    }

    .workoutInfo {
        float: left;
        margin-left: 70px;
        margin-top: 20px;
    }

    .lastRepBox {
        float: left;
        width: 70px;
        height: 30px;
        margin-left: 20px;
        margin-top: 15px;
    }

    #completeDayBox {
        margin: 100px 50px 70px 430px;
    }

</style>

<div class="jumbotron">
    <h4 id="userName">@ViewBag.firstName @ViewBag.lastName</h4>
    <h1>Workout</h1>
    <div id="workoutNumber">
        <h3 id="weekNumber">Week Number: @ViewBag.weekNumber</h3>
        <h3 id="dayNumber">Day Number: @ViewBag.dayNumber</h3>
     </div>

    <div class="workoutBox">
        <h3 class="workoutName">@ViewBag.name1</h3>
        <h4 class="workoutInfo">Weight: @ViewBag.weight1 lb</h4>
        <h4 class="workoutInfo">Sets: @ViewBag.sets1</h4>
        <h4 class="workoutInfo">Reps: @ViewBag.reps1</h4>
        <h4 class="workoutInfo">Last Set Reps:</h4>
        <input class ="lastRepBox" type="number"/>
    </div>

    <div class="workoutBox">
        <h3 class="workoutName">@ViewBag.name2</h3>
        <h4 class="workoutInfo">Weight: @ViewBag.weight2 lb</h4>
        <h4 class="workoutInfo">Sets: @ViewBag.sets2</h4>
        <h4 class="workoutInfo">Reps: @ViewBag.reps2</h4>
        <h4 class="workoutInfo">Last Set Reps:</h4>
        <input class="lastRepBox" type="number" />
    </div>

    <div class="workoutBox">
        <h3 class="workoutName">@ViewBag.name3</h3>
        <h4 class="workoutInfo">Weight: @ViewBag.weight3 lb</h4>
        <h4 class="workoutInfo">Sets: @ViewBag.sets3</h4>
        <h4 class="workoutInfo">Reps: @ViewBag.reps3</h4>
        <h4 class="workoutInfo">Last Set Reps:</h4>
        <input class="lastRepBox" type="number" />
    </div>
    

    <div id="completeDayBox">

        <button>Complete Day</button>

    </div>












</div>