@{
    ViewBag.Title = "Login";
}


<style>

    h1 {
        margin: 40px 50px 100px 420px;
    }

    .login {
        float: left;
        margin: 20px 20px 20px 330px;
    }

    .inputBox {
        float: left;
        margin: 20px 20px 20px 0px;
        width: 200px;
        height: 30px;
    }

    #loginButton {
        margin: 40px 20px 100px 450px;
    }

</style>


<div class="jumbotron">
    <h1>Login</h1>

    <form action="Login/getUser" method="post">
        <label class="login">UserName:</label>
        <input class="inputBox" type="text" name="userName" placeholder="UserName" required />
        <label class="login">Password:</label>
        <input class="inputBox" type="password" name="password" placeholder="Password" required />
        <input id="loginButton" type="submit" value="Sign In"/>
    </form>


</div>
