
@{
    ViewBag.Title = "Register";
}

<style>

    h1{
        margin-top: 50px;
        margin-bottom: 100px;
        margin-left: 400px;
    }

    h3{
        float: left;
        margin-right: 30px;
    }

    input{

        width: 400px;
        height: 50px;
    }

    .box{
        height: 100px;
        width: 700px;
        margin-left: 300px;
    }

    #password1 {
        margin-left: 320px;
    }

    #password2 {
        margin-left: 218px;
    }

    #create {
        margin: 100px 50px 100px 450px;
    }


</style>



<div class="jumbotron">

    <h1>Register</h1>
    <form action="Register/createUser" method="post">
    <div class="box">
        <h3>First Name:</h3>
        <input type="text" name="firstName" placeholder="First Name" required />
    </div>

    <div class="box">
        <h3>Last Name:</h3>
        <input type="text" name="lastName" placeholder="Last Name" required />
    </div>

    <div class="box">
        <h3>User Name:</h3>
        <input type="text" name="userName" placeholder="UserName" required />
    </div>

    <div id="password1" class="box">
        <h3>Password:</h3>
        <input type="password" name="password" placeholder="Password" required />
    </div>


    <div id="create">
        <input type="submit" value="Create User"/>
    </div>
    </form>

    <h3>@TempData["Error"]</h3>


</div>

